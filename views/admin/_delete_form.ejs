<div class="galleryDeleteForm">
  <% if (photos && photos.length > 0) { %>
    <% photos.forEach((photo, index) => { %>
      <div class="galleryDiv">
        <div class="input-group">
          <input name="photoIds" value="<%= photo._id.toString() %>" type="checkbox" id="checkbox<%= index %>" class="checkboxDeleteForm" />
          <label for="checkbox<%= index %>">
            <img src="/<%= photoBasePath %>/<%= photo.filename %>" alt="<%= photo.name %>" class="imgDeleteForm" />
          </label>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p>No photos found.</p>
  <% } %>
</div>